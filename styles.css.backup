/*-- scss:rules --*/

/* Clean, minimalistic text-focused design */

:root {
  --primary-color: #0066cc;
  --text-primary: #2c2c2c;
  --text-secondary: #666666;
  --text-muted: #999999;
  --border-color: #e0e0e0;
  --hover-bg: #f5f5f5;
  --transition: all 0.15s ease;
}

body {
  background: #ffffff;
  color: var(--text-primary);
  line-height: 1.6;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
  font-size: 15px;
  -webkit-font-smoothing: antialiased;
}


/* Modern book page hero layout - eye-catching and prominent */
.book-hero {
  display: grid;
  grid-template-columns: 350px 1fr;
  gap: 3rem;
  align-items: start;
  margin: 2rem 0;
  padding: 2rem;
  background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
  border-radius: 12px;
  border: 1px solid var(--border-color);
}

.book-cover-large {
  position: sticky;
  top: 2rem;
}

.book-image-large {
  width: 100%;
  max-width: 350px;
  height: auto;
  border-radius: 8px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.book-image-large:hover {
  transform: translateY(-5px);
  box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2);
}

.book-details {
  padding-top: 0.5rem;
}

.book-details h2 {
  font-size: 2rem;
  font-weight: 700;
  margin-top: 0;
  margin-bottom: 1rem;
  color: var(--text-primary);
  line-height: 1.3;
  border-bottom: none;
}

.book-details h3 {
  font-size: 1.3rem;
  font-weight: 600;
  margin-top: 2rem;
  margin-bottom: 1rem;
  color: var(--text-primary);
}

/* Prominent call-to-action button */
.book-cta {
  display: inline-block;
  padding: 0.75rem 2rem;
  background: var(--primary-color);
  color: white !important;
  font-weight: 600;
  font-size: 1.05rem;
  border-radius: 6px;
  text-decoration: none;
  transition: all 0.2s ease;
  box-shadow: 0 4px 12px rgba(0, 102, 204, 0.2);
  margin: 1rem 0 1.5rem 0;
}

.book-cta:hover {
  background: #0052a3;
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(0, 102, 204, 0.3);
  text-decoration: none;
}

/* Responsive book layout for mobile */
@media (max-width: 900px) {
  .book-hero {
    grid-template-columns: 1fr;
    gap: 2rem;
    padding: 1.5rem;
  }
  
  .book-cover-large {
    position: static;
    text-align: center;
  }
  
  .book-image-large {
    max-width: 280px;
  }
  
  .book-details h2 {
    font-size: 1.6rem;
  }
}

/* Old book section styling - keeping for compatibility */

.book-image {
  width: 160px;
  height: 160px;
  border-radius: 4px;
  object-fit: cover;
  margin: 0 auto 1rem auto;
  display: block;
  max-width: 160px;
  max-height: 160px;
}

.book-title {
  font-size: 1.5rem;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 0.5rem;
  text-align: center;
}

.book-subtitle {
  font-size: 1rem;
  font-style: italic;
  color: var(--text-secondary);
  margin-bottom: 1rem;
  text-align: center;
}

.book-section {
  text-align: center;
  padding: 2rem 0 1.5rem 0;
  border-bottom: 1px solid var(--border-color);
  margin-bottom: 1.5rem;
}



/* Simple profile section */
.profile-section {
  text-align: center;
  padding: 2rem 0 1.5rem 0;
  border-bottom: 1px solid var(--border-color);
  margin-bottom: 2rem;
}

.profile-photo {
  width: 120px;
  height: 120px;
  border-radius: 50%;
  object-fit: cover;
  margin: 0 auto 1rem auto;
  display: block;
}

.profile-section p {
  max-width: 700px;
  margin-left: auto;
  margin-right: auto;
  margin-bottom: 1rem;
}


/* Content spacing - tighter and efficient */
.content {
  padding-top: 0.5rem !important;
  max-width: 800px;
  margin: 0 auto;
  padding-left: 1rem;
  padding-right: 1rem;
}

/* Clean typography */
h1 {
  font-size: 1.6rem;
  font-weight: 600;
  margin-bottom: 0.75rem;
  margin-top: 0;
  color: var(--text-primary);
}

h2 {
  font-size: 1.3rem;
  font-weight: 600;
  margin-top: 2rem;
  margin-bottom: 0.75rem;
  color: var(--text-primary);
  border-bottom: 1px solid var(--border-color);
  padding-bottom: 0.4rem;
}

h2:first-of-type {
  margin-top: 0;
}

h3 {
  font-size: 1.05rem;
  font-weight: 600;
  margin-top: 1.5rem;
  margin-bottom: 0.5rem;
  color: var(--text-primary);
}




/* Clean, simple links with elegant hover */
a {
  color: var(--primary-color);
  text-decoration: none;
  transition: var(--transition);
  position: relative;
}

a:hover {
  color: #004a99;
}

/* Elegant underline on hover for body links */
.content a:not([class]) {
  background-image: linear-gradient(to right, var(--primary-color) 0%, var(--primary-color) 100%);
  background-position: 0 100%;
  background-repeat: no-repeat;
  background-size: 0 1px;
  transition: background-size 0.2s ease;
}

.content a:not([class]):hover {
  background-size: 100% 1px;
}

/* PDF links with subtle styling */
a[href$=".pdf"], a[href*="PDF"] {
  font-size: 0.9em;
  opacity: 0.8;
  font-weight: 500;
  padding: 0.15rem 0.4rem;
  background: var(--hover-bg);
  border-radius: 3px;
  transition: var(--transition);
}

a[href$=".pdf"]:hover, a[href*="PDF"]:hover {
  opacity: 1;
  background: #e8f2ff;
}

/* Contact links in profile */
.profile-section a {
  font-weight: 500;
}




/* Compact lists for efficient space usage */
ul {
  padding-left: 1.25rem;
  margin-bottom: 1rem;
}

li {
  margin-bottom: 0.75rem;
  line-height: 1.65;
}

li:last-child {
  margin-bottom: 0;
}

/* Publication list items with subtle separation */
li + li {
  padding-top: 0.25rem;
}

/* Tight paragraph spacing */
p {
  margin-bottom: 0.85rem;
  line-height: 1.65;
  color: var(--text-primary);
}

/* Strong text styling */
strong {
  font-weight: 600;
  color: var(--text-primary);
}

/* Italic text for journal names */
em {
  color: var(--text-secondary);
  font-style: italic;
}

.sidebar {
  width: 200px;
  font-size: 0.9rem;
}

.sidebar nav {
  position: sticky;
  top: 1rem;
}

.sidebar a {
  color: var(--text-secondary);
  padding: 0.25rem 0;
  display: block;
}

.sidebar a:hover {
  color: var(--primary-color);
}

/* Simple navbar with elegant styling */
.navbar {
  border-bottom: 1px solid var(--border-color);
  background: rgba(255, 255, 255, 0.98);
  backdrop-filter: blur(10px);
}

/* Footer styling */
footer {
  margin-top: 4rem;
  padding: 2rem 0;
  border-top: 1px solid var(--border-color);
  color: var(--text-muted);
  font-size: 0.85rem;
  text-align: center;
}


/* Subtle PDF links */
a[href$=".pdf"], a[href*="PDF"] {
  font-size: 0.9em;
  opacity: 0.85;
}

a[href$=".pdf"]:hover, a[href*="PDF"]:hover {
  opacity: 1;
}



/* Responsive design - optimized for space */
@media (max-width: 768px) {
  body {
    font-size: 14px;
  }
  
  .content {
    padding: 0.5rem !important;
  }
  
  .profile-section {
    padding: 1.5rem 0 1rem 0;
  }
  
  .profile-photo {
    width: 100px;
    height: 100px;
  }
  
  h1 {
    font-size: 1.5rem;
  }
  
  h2 {
    font-size: 1.25rem;
    margin-top: 1.5rem;
  }
  
  h3 {
    font-size: 1rem;
  }
  
  .book-section {
    padding: 1.5rem 0 1rem 0;
  }
  
  .book-image {
    width: 120px;
    height: 120px;
  }
  
  .sidebar {
    width: 100%;
  }
  
  ul {
    padding-left: 1rem;
  }
}

/* Print styles */
@media print {
  .navbar, .sidebar {
    display: none;
  }
  
  body {
    font-size: 11pt;
  }
  
  h2 {
    margin-top: 1rem;
  }
  
  a {
    color: black;
    text-decoration: underline;
  }
}


